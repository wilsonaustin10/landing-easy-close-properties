# Required Environment Variables for Production

# Google APIs - REQUIRED for address autocomplete
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Analytics - Optional but recommended
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_FB_PIXEL_ID=
NEXT_PUBLIC_HOTJAR_ID=

# Google Ads Conversion Tracking - REQUIRED for accurate conversion reporting
NEXT_PUBLIC_GOOGLE_ADS_ID=AW-17109864760
NEXT_PUBLIC_PROPERTY_CONVERSION_LABEL=_wUiCO6H2pMbELiiz94_
NEXT_PUBLIC_BUSINESS_CONVERSION_LABEL=4DprCPfG3ZMbELiiz94_

# Google Ads API - Optional for server-side conversion tracking (backup only)
# Get credentials from: https://ads.google.com/aw/apicenter
# IMPORTANT: Server-side tracking is DISABLED by default to prevent duplicate conversions
# Only enable if you're having issues with client-side tracking on thank-you pages
ENABLE_SERVER_SIDE_CONVERSION=false
GOOGLE_ADS_API_KEY=
GOOGLE_ADS_CUSTOMER_ID=
GOOGLE_ADS_DEVELOPER_TOKEN=

# Business Form Integration - REQUIRED for form submissions
# Option 1: Zapier Webhook (simpler)
ZAPIER_WEBHOOK_URL=

# Option 2: Google Sheets (requires service account)
# Create service account at: https://console.cloud.google.com/iam-admin/serviceaccounts
# Enable Google Sheets API: https://console.cloud.google.com/apis/library/sheets.googleapis.com
# Download JSON key and paste the entire content here (single line)
GOOGLE_SERVICE_ACCOUNT_KEY=
GOOGLE_SHEETS_PROPERTY_ID=
GOOGLE_SHEETS_BUSINESS_ID=

# ReCAPTCHA - Optional but recommended for production
# Get keys from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Service Areas - Optional
NEXT_PUBLIC_SERVICE_AREAS=["California","Nevada","Arizona","Oregon"]

# Advanced Options - Optional
# GHL CRM Integration
GHL_API_KEY=
GHL_LOCATION_ID=
GHL_PIPELINE_ID=
GHL_STAGE_ID=

# Phone Validation Service
NUMVERIFY_API_KEY=